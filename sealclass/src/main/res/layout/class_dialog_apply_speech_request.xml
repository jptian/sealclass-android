<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@android:color/transparent"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/class_dialog_apply_speech_request_height"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/dialog_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/class_dialog_apply_speech_request_text_size"
            android:gravity="center_vertical"
            android:textColor="@color/classDialogApplySpeechRequestText"
            android:layout_marginLeft="@dimen/class_dialog_apply_speech_request_content_margin_left"/>

        <Button
            android:id="@+id/dialog_btn_positive"
            android:layout_width="@dimen/class_dialog_apply_speech_request_btn_value"
            android:layout_height="@dimen/class_dialog_apply_speech_request_btn_value"
            android:textAllCaps="false"
            android:background="@drawable/class_dialog_apply_speech_request_approve"
            android:layout_marginLeft="@dimen/class_dialog_apply_speech_request_approve_margin_left"/>

        <Button
            android:id="@+id/dialog_btn_negative"
            android:layout_width="@dimen/class_dialog_apply_speech_request_btn_value"
            android:layout_height="@dimen/class_dialog_apply_speech_request_btn_value"
            android:textAllCaps="false"
            android:background="@drawable/class_dialog_apply_speech_request_reject"
            android:layout_marginRight="@dimen/class_dialog_apply_speech_request_reject_margin_right"
            android:layout_marginLeft="@dimen/class_dialog_apply_speech_request_reject_margin_left"/>
    </LinearLayout>
</LinearLayout>